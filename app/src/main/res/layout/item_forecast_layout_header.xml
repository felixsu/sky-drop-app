<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/item_header_container"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/card_halfMargin"
    android:layout_marginLeft="@dimen/card_margin"
    android:layout_marginRight="@dimen/card_margin"
    android:layout_marginTop="@dimen/card_halfMargin"
    android:background="@drawable/shape_card"
    android:elevation="@dimen/card_elevation">

    <TextView
        android:id="@+id/item_label_header_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:textSize="22sp"
        android:textStyle="bold"
        tools:text="Next 8 hours"/>

    <TextView
        android:id="@+id/item_label_hourly_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_label_header_title"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/card_margin"
        android:maxLines="2"
        android:textSize="16sp"
        tools:text="today will be clear"/>

    <com.github.mikephil.charting.charts.LineChart
        android:id="@+id/item_chart_forecast"
        android:layout_width="match_parent"
        android:layout_height="168dp"
        android:layout_below="@id/item_label_hourly_summary"
        android:layout_marginBottom="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:paddingTop="16dp">
    </com.github.mikephil.charting.charts.LineChart>

</RelativeLayout>